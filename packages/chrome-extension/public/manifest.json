{
  "manifest_version": 3,
  "name": "LinkedIn Auto-Apply Helper",
  "version": "0.1.0",
  "description": "Scans apply forms, fetches suggestions, and injects a popup.",
  "permissions": ["scripting", "storage"],
  "host_permissions": [
    "https://www.linkedin.com/jobs/*",
    "https://apply.*/*",
    "https://api.yourservice.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*", "https://apply.*/*"],
      "js": ["contentScript.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
