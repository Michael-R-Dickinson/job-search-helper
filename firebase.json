{
  "functions": [
    {
      "source": "packages/backend",
      "runtime": "python312",
      "predeploy": [
        "cd \"$RESOURCE_DIR\" && uv export --no-hashes --no-dev --format requirements-txt > requirements.txt",
        "cd $RESOURCE_DIR && echo \".\" >> requirements.txt"
      ],
      "codebase": "default",
      "ignore": ["venv", ".git", "firebase-debug.log", "firebase-debug.*.log", "*.local"]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": false
  }
}
